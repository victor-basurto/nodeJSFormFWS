extends layout

block content
	div(class="container")
		div(class="jumbotron")
			div(class="col-xs-12")
				h1 Review Your Form
				p After Reviewing, Please Print 
		each studentInfo in studentsInfo
			div(class="container")
				div(class="row")
					div(class="col-md-3 col-xs-12 col-md-offset-9")
						label(class="black-font") Date:
						br
						p(class="ligth-black-font")=studentInfo.date

				//- Students Name Box
				div(class="row")
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Student Full Name:
						br
						p(class="ligth-black-font")=studentInfo.std_name

					//- Students School ID Box
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Student ID: 
						br
						p(class="ligth-black-font")=std_ID

					//- Students Email
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Student Email:
						br
						p(class="ligth-black-font")=studentInfo.std_Email 
						span @email.itt-tech.edu

				//- Student Contact Number
				div(class="row")
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Contact Phone Number:
						brl
						p(class="ligth-black-font")=studentInfo.std_phone

					//- Students Degree
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Student Degree:
						br
						p(class="ligth-black-font")=studentInfo.std_degree

					//- Students Program
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Program:
						br
						p(class="ligth-black-font")=studentInfo.std_program

				//- Students Current Quarter
				div(class="row")
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Current Quarter:
						br
						p(class="ligth-black-font")=studentInfo.current_quarter

					//- Student Requested Chair
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Request Service From:
						br
						p(class="ligth-black-font")=studentInfo.chairs_request

					//- Student Class Requests
					div(class="col-md-4 col-xs-12")
						label(class="black-font") Type of Request:
						br
						p(class="ligth-black-font")=studentInfo.class_request

				//- Students Comment Box
				div(class="row")
					div(class="form-group")
						label(class="black-font") Detailed Information About Request:
						br
						p(class="ligth-black-font")=studentInfo.comment