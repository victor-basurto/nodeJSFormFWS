extends layout.jade

block content
	div(class="container")
		div(class="jumbotron")
			h1 Review Your Form
			p After Reviewing, Please Print 

		// Print all data from database
		div(class="container")
			div(class="row")
				div(class="col-md-3 col-xs-12 col-md-offset-9")
					label(class="black-font") Date:
					br
					p(class="ligth-black-font")=studentDataModal_two.date.toDateString()

			//- Students Name Box
			div(class="row")
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Student Full Name:
					br
					p(class="ligth-black-font")=studentDataModal_two.std_name

				//- Students School ID Box
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Student ID: 
					br
					p(class="ligth-black-font")=studentDataModal_two.std_ID

				//- Students Email
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Student Email:
					br
					p(class="ligth-black-font")=studentDataModal_two.std_Email 
						| @email.itt-tech.edu

			//- Student Contact Number
			div(class="row")
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Contact Phone Number:
					brl
					p(class="ligth-black-font")=studentDataModal_two.std_phone

				//- Students Degree
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Student Degree:
					br
					p(class="ligth-black-font")=studentDataModal_two.std_degree

				//- Students Program
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Program:
					br
					p(class="ligth-black-font")=studentDataModal_two.std_program

			//- Student Contact Number
			div(class="row")
				//- Office 365 CheckBox
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Office 365 Issues:
					brl
					p(class="ligth-black-font")=studentDataModal_two.office_365

				//- Technical Request CheckBox
				div(class="col-md-4 col-xs-12")
					label(class="black-font") Technical Issues:
					brl
					p(class="ligth-black-font")=studentDataModal_two.tech_request
				
				//- LRC Request CheckBox
				div(class="col-md-4 col-xs-12")
					label(class="black-font") General Issues:
					brl
					p(class="ligth-black-font")=studentDataModal_two.lrc_request

			//- Students Comment Box
			div(class="row")
				div(class="col-md-12 col-xs-12")
					label(class="black-font") Detailed Information About Request:
					br
					p(class="ligth-black-font")=studentDataModal_two.comments
					button(type="button" class="btn btn-info pull-right" id="print") Print Page
